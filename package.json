{
  "name": "cosmoslide",
  "version": "0.0.1",
  "description": "Federated platform for sharing presentations and microblogging built on ActivityPub",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace @cosmoslide/backend start:dev\" \"yarn workspace @cosmoslide/frontend dev\"",
    "dev:backend": "yarn workspace @cosmoslide/backend start:dev",
    "dev:frontend": "yarn workspace @cosmoslide/frontend dev",
    "build": "yarn workspaces run build",
    "build:backend": "yarn workspace @cosmoslide/backend build",
    "build:frontend": "yarn workspace @cosmoslide/frontend build",
    "test": "yarn workspace @cosmoslide/backend test",
    "test:watch": "yarn workspace @cosmoslide/backend test:watch",
    "lint": "yarn workspaces run lint",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "generate-key": "yarn workspace @cosmoslide/backend generate-key",
    "create-user": "yarn workspace @cosmoslide/backend create-user",
    "grant-admin": "yarn workspace @cosmoslide/backend grant-admin",
    "migration:generate": "yarn workspace @cosmoslide/backend migration:generate",
    "migration:run": "yarn workspace @cosmoslide/backend migration:run",
    "migration:revert": "yarn workspace @cosmoslide/backend migration:revert",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": "prettier --write",
    "packages/**/*.{js,jsx}": "prettier --write",
    "packages/**/*.{json,css,md}": "prettier --write"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2"
  }
}
